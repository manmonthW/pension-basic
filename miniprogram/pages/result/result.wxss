/* pages/result/result.wxss */

/* 方案卡片容器 */
.plans-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 单个方案卡片 */
.plan-card {
  background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  border: 3rpx solid #e2e8f0;
  transition: all 0.3s;
}

.plan-card.plan-1 {
  border-color: #3b82f6;
}

.plan-card.plan-2 {
  border-color: #10b981;
  background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
}

.plan-card.plan-3 {
  border-color: #f59e0b;
}

.plan-card.plan-4 {
  border-color: #8b5cf6;
}

/* 方案头部 */
.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.plan-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a202c;
}

.plan-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  font-weight: 600;
}

/* 方案主体 - 养老金 */
.plan-main {
  text-align: center;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.plan-pension {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
}

.pension-amount {
  font-size: 56rpx;
  font-weight: bold;
  color: #667eea;
}

.pension-unit {
  font-size: 28rpx;
  color: #718096;
}

/* 方案详情 */
.plan-details {
  font-size: 26rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.detail-label {
  color: #718096;
}

.detail-value {
  color: #2d3748;
  font-weight: 600;
}

.detail-row.highlight .detail-value {
  color: #667eea;
  font-size: 28rpx;
}

.detail-divider {
  height: 2rpx;
  background: #e2e8f0;
  margin: 12rpx 0;
}

/* 对比部分 */
.compare-section {
  margin-top: 12rpx;
  background: rgba(102, 126, 234, 0.05);
  padding: 16rpx;
  border-radius: 12rpx;
}

.detail-row.compare {
  padding: 8rpx 0;
}

.detail-value.positive {
  color: #10b981;
}

.detail-value.negative {
  color: #ef4444;
}

/* 推荐卡片 */
.recommendations {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.rec-card {
  background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  border: 2rpx solid #e2e8f0;
}

.rec-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.rec-title {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 12rpx;
}

.rec-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 12rpx;
}

.rec-desc {
  font-size: 24rpx;
  color: #a0aec0;
}

/* 公式部分 */
.formula-section {
  margin-bottom: 32rpx;
}

.formula-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3748;
  margin-bottom: 16rpx;
}

.formula-box {
  background: #f7fafc;
  border-left: 6rpx solid #667eea;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.8;
  white-space: pre-line;
}

.formula-box.highlight {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-left-color: #f59e0b;
  color: #78350f;
}

.formula-notes {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #718096;
  line-height: 1.8;
  padding-left: 24rpx;
  white-space: pre-line;
}

/* 操作按钮 */
.action-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin: 40rpx 0;
}

/* 底部 */
.footer {
  text-align: center;
  padding: 40rpx 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.8;
}
