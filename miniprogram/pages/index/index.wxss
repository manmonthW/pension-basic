/* pages/index/index.wxss */

/* 头部卡片 */
.header-card {
  text-align: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border: 2rpx solid #667eea;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 12rpx;
}

.header-note {
  font-size: 24rpx;
  color: #a0aec0;
  margin-top: 8rpx;
}

/* 底部信息 */
.footer {
  text-align: center;
  padding: 40rpx 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.8;
}
