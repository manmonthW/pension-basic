/* 全局样式 */
page {
  background: linear-gradient(135deg, #0A1A2F 0%, #1e3a5f 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  box-sizing: border-box;
  overflow-x: hidden; /* 防止水平滚动 */
}

/* 全局 box-sizing 规则 */
view, text, input, picker, button, scroll-view {
  box-sizing: border-box;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  width: 100%;
  max-width: 100%;
  overflow-x: hidden;
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 100%;
  overflow: hidden;
}

/* 标题卡片 - 专业深海蓝配色 */
.header-card {
  background: linear-gradient(135deg, #0A1A2F 0%, #09385F 100%);
  border-radius: 32rpx;
  padding: 56rpx 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(10, 26, 47, 0.4),
              0 8rpx 24rpx rgba(9, 56, 95, 0.3);
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(248, 194, 75, 0.2);
}

.header-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #F8C24B 0%, #FFD876 50%, #F8C24B 100%);
  border-radius: 32rpx 32rpx 0 0;
  opacity: 0.9;
}

.header-card::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(248, 194, 75, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.header-icon {
  font-size: 72rpx;
  text-align: center;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
  animation: iconFloat 3s ease-in-out infinite;
  filter: drop-shadow(0 4rpx 16rpx rgba(248, 194, 75, 0.5));
}

@keyframes iconFloat {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-8rpx);
  }
}

.header-title {
  font-size: 52rpx;
  font-weight: 800;
  color: #FFFFFF;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 1.3;
  position: relative;
  z-index: 1;
  text-align: center;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.header-subtitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #D6E2F0;
  margin-bottom: 24rpx;
  text-align: center;
  line-height: 1.6;
  position: relative;
  z-index: 1;
  letter-spacing: 1rpx;
  opacity: 0.95;
}

.header-note {
  font-size: 24rpx;
  color: #D6E2F0;
  text-align: center;
  padding: 16rpx 24rpx;
  background: rgba(248, 194, 75, 0.12);
  border-radius: 16rpx;
  border: 2rpx solid rgba(248, 194, 75, 0.3);
  position: relative;
  z-index: 1;
  line-height: 1.6;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.note-icon {
  font-size: 28rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(248, 194, 75, 0.4));
}

/* 标题样式 */
.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a202c;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

/* 表单组 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #4a5568;
  margin-bottom: 16rpx;
}

/* 带帮助图标的标签 */
.form-label-with-help {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.help-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #F8C24B 0%, #FFD876 100%);
  color: #0A1A2F;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 4rpx 12rpx rgba(248, 194, 75, 0.4);
  transition: all 0.3s;
}

.help-icon:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(248, 194, 75, 0.3);
}

.form-input,
.form-picker {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2d3748;
  transition: all 0.3s;
  box-sizing: border-box; /* 确保 padding 包含在宽度内 */
}

.form-input:focus {
  border-color: #667eea;
  background: #ffffff;
}

.form-hint {
  display: none;
}

/* 紧凑型提示信息 */
.form-hint.compact {
  display: none;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: none;
  position: relative;
  overflow: hidden;
  letter-spacing: 2rpx;
}

.btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn:active::before {
  width: 600rpx;
  height: 600rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #F8C24B 0%, #FFD876 100%);
  color: #0A1A2F;
  box-shadow: 0 12rpx 28rpx rgba(248, 194, 75, 0.5);
  font-weight: 700;
}

.btn-primary:active {
  transform: translateY(-2rpx);
  box-shadow: 0 16rpx 32rpx rgba(248, 194, 75, 0.6);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  color: #0A1A2F;
  border: 3rpx solid #F8C24B;
  box-shadow: 0 8rpx 20rpx rgba(248, 194, 75, 0.2);
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 1);
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 24rpx rgba(102, 126, 234, 0.3);
}

/* 按钮容器 - 居中对齐 */
.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-top: 24rpx;
}

.button-container .btn {
  max-width: 600rpx;
}

/* 结果框 - iOS玻璃态效果 */
.result-box {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-top: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(79, 70, 229, 0.15),
              0 0 0 1rpx rgba(255, 255, 255, 0.1) inset;
  position: relative;
  overflow: hidden;
}

.result-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #10b981);
  border-radius: 24rpx 24rpx 0 0;
}

.result-title {
  font-size: 34rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 24rpx;
  letter-spacing: 2rpx;
}

.result-content {
  font-size: 28rpx;
  color: #2d3748;
  line-height: 2;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.info-item {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  padding: 28rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08),
              0 0 0 1rpx rgba(255, 255, 255, 0.1) inset;
  transition: all 0.3s ease;
}

.info-item:active {
  transform: scale(0.98);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12),
              0 0 0 1rpx rgba(255, 255, 255, 0.2) inset;
}

.info-label {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.info-value {
  font-size: 34rpx;
  font-weight: bold;
  color: #2d3748;
  letter-spacing: 1rpx;
}

/* 提示框 */
.tip-box {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border: 2rpx solid #fbbf24;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #92400e;
  margin-bottom: 12rpx;
}

.tip-content {
  font-size: 26rpx;
  color: #78350f;
  line-height: 1.8;
}

/* 加载动画 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #718096;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #a0aec0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
}
