/* 全局样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 通用容器 */
.container {
  padding: 20rpx;
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 标题样式 */
.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a202c;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

/* 表单组 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #4a5568;
  margin-bottom: 16rpx;
}

.form-input,
.form-picker {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2d3748;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #667eea;
  background: #ffffff;
}

.form-hint {
  font-size: 24rpx;
  color: #718096;
  margin-top: 12rpx;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.4);
}

.btn-primary:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.btn-secondary {
  background: #ffffff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-secondary:active {
  background: #f7fafc;
}

/* 结果框 */
.result-box {
  background: linear-gradient(135deg, #e0f2fe 0%, #bfdbfe 100%);
  border: 2rpx solid #3b82f6;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e40af;
  margin-bottom: 16rpx;
}

.result-content {
  font-size: 28rpx;
  color: #1e3a8a;
  line-height: 1.8;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.info-item {
  background: #f7fafc;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #667eea;
}

.info-label {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3748;
}

/* 提示框 */
.tip-box {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border: 2rpx solid #fbbf24;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #92400e;
  margin-bottom: 12rpx;
}

.tip-content {
  font-size: 26rpx;
  color: #78350f;
  line-height: 1.8;
}

/* 加载动画 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #718096;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #a0aec0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
}
